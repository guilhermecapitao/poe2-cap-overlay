{
  "name": "poe2-cap-overlay",
  "version": "1.0.6",
  "description": "Overlay para Path of Exile 2 - Track de quests e progresso da campanha",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "npm run build && NODE_ENV=development electron .",
    "watch": "tsc --watch",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "poe2",
    "path-of-exile",
    "overlay",
    "quest-tracker"
  ],
  "author": {
    "name": "Guilherme Capitão",
    "email": "guilherme.capitao95@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "lucide-static": "^0.556.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.capitao.poe2-overlay",
    "productName": "POE2 Cap Overlay",
    "copyright": "Copyright © 2024 Guilherme Capitão",
    "publish": {
      "provider": "github",
      "owner": "guilhermecapitao",
      "repo": "poe2-cap-overlay"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/**/*.html",
      "src/**/*.css",
      "data/**/*",
      "node_modules/**/*",
      "!node_modules/**/README*",
      "!node_modules/**/*.md"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Game"
    }
  }
}
